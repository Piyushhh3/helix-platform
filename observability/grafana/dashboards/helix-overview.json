{
  "dashboard": {
    "title": "Helix Platform - Overview",
    "tags": ["helix", "overview", "golden-signals"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    
    "panels": [
      {
        "id": 1,
        "title": "üìä Platform Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(up{job=~\".*-service\"}) / count(up{job=~\".*-service\"}) * 100",
            "legendFormat": "Health %"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      
      {
        "id": 2,
        "title": "üöÄ Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"helix-dev\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      
      {
        "id": 3,
        "title": "‚ö†Ô∏è Error Rate (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"helix-dev\",status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total{namespace=\"helix-dev\"}[5m])) by (service) * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error %"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      
      {
        "id": 4,
        "title": "‚è±Ô∏è Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=\"helix-dev\"}[5m])) by (service, le))",
            "legendFormat": "{{service}} p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=\"helix-dev\"}[5m])) by (service, le))",
            "legendFormat": "{{service}} p99"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      
      {
        "id": 5,
        "title": "üî• Active Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"helix-dev\"})",
            "legendFormat": "Pods"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      
      {
        "id": 6,
        "title": "üíæ Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"helix-dev\",container!=\"\"}) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      
      {
        "id": 7,
        "title": "‚ö° CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"helix-dev\",container!=\"\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "CPU Cores"},
          {"format": "short"}
        ]
      },
      
      {
        "id": 8,
        "title": "üåê Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"helix-dev\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} RX"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"helix-dev\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} TX"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      }
    ],
    
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "constant",
          "current": {"value": "helix-dev", "text": "helix-dev"},
          "hide": 2
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{namespace=\"helix-dev\"}, job)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
    }
  }
}
